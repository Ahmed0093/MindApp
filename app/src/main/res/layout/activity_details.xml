<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detailsRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        android:clickable="false"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:contentPadding="@dimen/card_padding">
    <RelativeLayout
            android:id="@+id/rlUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/def_small_margin">
        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvTitleDetails"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/primary_text"
                    tools:text="Title to post"/>

            <TextView
                    android:id="@+id/tvPriceDetails"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/primary_text"
                    tools:text="50"
                    />
        </LinearLayout>
        <TextView
                android:id="@+id/tvDescription"
                android:layout_below="@id/linearLayout"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:layout_margin="5dp"
                tools:text="description"
                android:gravity="left"/>

        <ImageView
                android:id="@+id/ivAvatarDetails"
                android:layout_below="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:background="@android:color/white"
                />

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ximgvwClearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@android:drawable/menu_frame"
            app:layout_anchor="@id/rvPosts"
            app:layout_anchorGravity="bottom|right|end" />
</androidx.cardview.widget.CardView>